<div class="header">
  <h1 style="margin: 0;"><%= category.name %></h1>
  <a href="/item/new/<%= category.id %>">➕ New Item</a>
</div>
<% if (category.id === 0) { %>
  <p>Assign items to their respected categories in order to edit their content.</p>
<% } else { %>
  <div class="items-grid" style="padding: 0px 14px;" >
    <p>Name</p>
    <p>Price</p>
    <p>Available</p>
    <p style="grid-column: 4/-1; margin-left: auto;">Actions</p>
  </div>
<% } %>
<ul class="list">
  <% items.forEach(item => { %>
    <li class="items-grid">
        <a href="/item/<%= item.id %>"  ><%= item.name %></a>
        <p><%= item.price %></p>
        <p><%= item.quantity %></p>
      <div style="grid-column: 4/-1; margin-left: auto;">
        <a href="/item/edit/<%= item.id %>">✍️</a>
        <a href="/item/delete/<%= item.id %>">🗑️</a>
      </div>
    </li>
  <% }) %>
</ul>
