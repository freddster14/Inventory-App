<div class="header">
  <h1>Categories</h1>
  <a href="/category/new">➕ New Category</a>
</div>
<div class="items-grid header-row">
  <p>Name</p>
  <p style="grid-column: 4/-1; margin-left: auto;">Actions</p>
</div>
<ul class="list" style="--limit: <%= (categories.length > 10 || totalPages > 1) ? limit : '' %>">
  <% categories.forEach((category, i) => { %>
    <li style="justify-content: space-between;" class="<%= i === categories.length - 1 ? 'items' : 'items seperator' %>">
      <a href="category/<%= category.id %>" ><%= category.name%></a>
      <div class="action-box">
        <a  href="category/edit/<%= category.id %>">✍️</a>
        <a href="category/delete/<%= category.id %>">🗑️</a>
      </div>
    </li>
  <% }) %>
</ul>
<% if (categories.length > 10 || totalPages > 1) { %>
  <%- include('../list-controls'); %>
<% } %>
