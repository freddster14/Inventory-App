<div class="header">
  <h1>Categories</h1>
  <a href="/category/new">➕ New Category</a>
</div>

<ul class="list">
  <% categories.forEach( category => { %>
    <li style="justify-content: space-between;" class="items">
      <a href="category/<%= category.id %>" ><%= category.name%></a>
      <div class="action-box">
        <a href="category/edit/<%= category.id %>">✍️</a>
        <a href="category/delete/<%= category.id %>">🗑️</a>
      </div>
    </li>
  <% }) %>
</ul>