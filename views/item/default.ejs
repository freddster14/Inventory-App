<div class="header">
  <h1>Inventory</h1>
  <a href="/item/new">➕ New Item</a>
</div>
<div class="items-grid" style="padding: 0px 14px;">
  <p>Name</p>
  <p>Price</p>
  <p>Available</p>
  <p>Active</p>
  <p style="margin-left: auto;">Actions</p>
</div>
<ul class="list">
  <% items.forEach( item => { %>
  <li class="items-grid">
    <% if(item.cat_id===1) { %>
      <a href="/category/1">
        <%= item.name %>
      </a>

      <% } else { %>
        <a href="/item/<%= item.id %>">
          <%= item.name %>
        </a>

        <% } %>
    <p><%= item.price %></p>
    <p><%= item.quantity %></p>
    <p><% if(item.cat_id === 1) { %>
      No
      <% } else { %>
        Yes
      <% } %>
    </p>
    <div class="action-box" style="margin-left: auto;">
      <a href="/item/edit/<%= item.id %>">✍️</a>
      <a href="/item/delete/<%= item.id %>">🗑️</a>
    </div>
  </li>
  <% })%>
</ul>
