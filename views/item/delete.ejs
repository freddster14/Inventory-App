<form action="/item/delete/<%= item.id %>" method="post">
  <h1>
    <%=item.name %>
  </h1>
  <div>
    <p><%= item.info %></p>
    <p><%= item.price %></p>
    <p><%= item.quantity %></p>
  </div>
  <p>Are you sure you want to remove this item?</p>
  <button type="submit">DELETE FOREVER</button>
</form>