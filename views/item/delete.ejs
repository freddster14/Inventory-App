<h1>
  <%=item.name %>
</h1>
<form action="/item/delete/<%= item.id %>" method="post" class="form-view" style="gap: 0px;" >
    <p style="margin-top: 0px;">Category: <a href="/category/<%= category.id %>"><%= category.name %></a></p>
    <p>Information: <%= item.info %></p>
    <p>Price: $<%= item.price %></p>
    <p class="quantity">Available: <span class="circle <%= item.quantity < 4 ? 'red-circle' : 'green-circle' %>"></span><%= item.quantity %></p>
    <p>Are you sure you want to remove this item?</p>
  <button style="margin-bottom: 10px;"  class="delete-btn" type="submit">DELETE FOREVER</button>
  <button class="cancel-btn" type="button" onclick="history.back()">CANCEL</button>
</form>