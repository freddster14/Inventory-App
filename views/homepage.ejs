<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventory</title>
</head>
<body>
  <%- include('topbar'); %>
  <div>
    <h1>Categories</h1>
    <a href="/category/0">No Category</a>
  </div>
  <ul>
    <% categories.forEach( category => { %>
      <li>
        <a href="/category/<%= category.id %>">
          <%= category.name %>
        </a>
      </li>
    <% }) %>
  </ul>
</body>
</html>